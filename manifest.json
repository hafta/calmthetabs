{
  "manifest_version": 2,
  "name": "Calm The Tabs",
  "version": "1.0",
  "description": "A control panel for unloading tabs. Useful when your computer is bogged down with tabs that you'd rather not close right now.",
  "icons": {
    "48" : "icon48.png"
  },
  "browser_action": {
    "default_icon": "icon48.png",
    "default_title": "Show Stuff"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "notifications",
    "tabs"
  ],
  "sidebar_action": {
    "default_title": "All Tabs",
    "default_panel": "sidebar.html",
    "default_icon": "icon48.png"
  }
}
